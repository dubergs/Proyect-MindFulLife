            position: relative;
            display: flex;
            align-items: center;
        }

        /* Estilo para el input de b칰squeda */
        .search-input {
            display: none;
            padding: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 16px;
            margin-left: 10px;
            width: 200px;
        }

        /* Mostrar el input de b칰squeda al hacer clic en el 칤cono de b칰squeda */
        .search-icon.active .search-input {
            display: block;
        }

        /* Estilo para el 칤cono de usuario */
        .user-icon {
            color: #fff;
            cursor: pointer;
            font-size: 20px;
            position: relative;
            margin-right: 30px;
        }

        /* Estilo para el submen칰 del usuario */
        .user-dropdown-menu {
