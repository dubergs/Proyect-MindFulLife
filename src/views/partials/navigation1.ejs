            padding: 20px;
            display: block;
            transition: background-color 0.3s, color 0.3s;
        }

        /* Estilo para el estado hover de los enlaces */
        nav ul li a:hover {
            color: #000000;
        }

        /* Estilo para el submen칰 */
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        /* Estilo para los elementos del submen칰 */
        .dropdown-menu a {
            color: #333;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 16px;
        }

        /* Estilo para el estado hover de los enlaces del submen칰 */
        .dropdown-menu a:hover {
            background-color: #ddd;
            color: #2d8cf0;
        }

        /* Mostrar el submen칰 al pasar el rat칩n sobre el elemento de la lista */
        nav ul li:hover .dropdown-menu {
            display: block;
        }

        /* Estilo para el contenedor de la derecha (icono de usuario) */
        .navbar-right {
            display: flex;
            align-items: center;
        }

        /* Estilo para el 칤cono de b칰squeda */
        .search-icon {
            color: #fff;
            cursor: pointer;
