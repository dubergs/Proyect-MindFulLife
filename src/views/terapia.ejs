<script>








    let currentSlide = 0;

function moveSlide(direction) {
    const slidesContainer = document.querySelector('.slides-container');
    const slides = document.querySelectorAll('.slide');
    const totalSlides = slides.length;

    // Actualiza el índice de la diapositiva actual
    currentSlide += direction;

    // Si la diapositiva actual es mayor que el total, regresa al inicio
    if (currentSlide >= totalSlides) {
        currentSlide = 0;
    }

    // Si la diapositiva actual es menor que 0, ve a la última diapositiva
    if (currentSlide < 0) {
        currentSlide = totalSlides - 1;
    }

    // Mueve el contenedor de diapositivas
    const offset = -currentSlide * 100;
    slidesContainer.style.transform = `translateX(${offset}%)`;
}


</script>
