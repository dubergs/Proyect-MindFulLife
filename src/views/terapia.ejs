    transition: transform 0.5s ease-in-out;
}

.slide {
    min-width: 100%;
    border-radius: 5px;
    padding: 20px;
    background-color: white;
    border: dashed 1px black;
}

.slide p {
    font-size: 18px;
    color: black;
    margin-bottom: 10px;
}

.slide h4 {
    font-size: 16px;
    color: var(--first-color);
}

/* Botones de navegación */
.prev, .next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: black;
    border: none;
    padding: 10px;
    cursor: pointer;
    border-radius: 50%;
    margin-left: 5px;
}

.prev {
